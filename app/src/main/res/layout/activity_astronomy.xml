<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AstronomyActivity">

    <Button
        android:id="@+id/btn_show_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW TODAY'S IMAGE"/>

    <ProgressBar
        android:id="@+id/download_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/btn_show_image"/>

    <ImageView
        android:id="@+id/astronomy_image"
        android:layout_below="@+id/btn_show_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/astronomy_explanation"
        android:layout_below="@+id/astronomy_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>